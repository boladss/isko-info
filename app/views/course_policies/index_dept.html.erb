<!DOCTYPE html>
<html>
  <body>
    <%= render partial: "layouts/sidebar", locals: { active: 'profile_dept' } %>
    <div class="content left-content">
      <h2 class="title">Edit Courses</h2>
      <br/> <br/>

      <h3 class="title">Courses</h3>
      <hr>
      <br/>
      <% @course_policies.each do |course_policy| %>
          <%= link_to course_policy.course_title, course_policy, class: "reg-button" %>
      <% end %>
      <%= link_to 'New Course', new_course_policy_path, class: 'login-button' %>

      <br/>
      <br/>
      <br/>
      <%= link_to "Return to profile", @department, class: "signup" %>
    </div>
    
    <script>
      addEventListener("trix-file-accept", function(event) {
        event.preventDefault();
      });
    </script>
  </body>
</html>

